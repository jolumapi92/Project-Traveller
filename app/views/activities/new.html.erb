<h1>Create an activity in <%= @location.name %></h1>

<%= simple_form_for [@location, @activity] do |t| %>
    <%= t.input :name, placeholder: "#{@location.name} + The name of the activity", label: "Location + Activity" %>
    <%= t.input :category, collection: ['Food', 'Culture', 'Outdoor activity', 'Beach', 'SPA', 'Relax'], prompt: "Select a category" %>
    <%= t.input :place, placeholder: "Address" %>
    <%= t.input :points, collection: 1..20, prompt: "Select points" %>
    <%= t.input :description, placeholder: "Imagine you are selling this activity" %>
    <%= t.submit "Create Activity"  %>
<% end %>